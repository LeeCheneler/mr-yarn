  "license": "MIT",
  "bin": {
    "mr": "./.scripts/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "yarn clean:build && yarn clean:node_modules",
    "clean:build": "rm -rf .build",
    "clean:node_modules": "rm -rf node_modules",
    "dev": "nodemon --ext ts --watch src .scripts/dev.js",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "colors": "^1.3.2",
    "fs-extra": "^7.0.0",
    "winston": "^3.1.0",
    "yargs": "^12.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.9.4",
    "@types/yargs": "^11.1.1",
    "jest": "^23.5.0",
    "nodemon": "^1.18.4",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3"
  }
}
